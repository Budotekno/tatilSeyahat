@using tatilSeyahat.Models.Siniflar
@model List<Hakkimizda>




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLoyout.cshtml";
}




<style>
    .hakkimizda {
        width: 500px;
        border-radius: 10px;
        box-shadow: 2px 2px 10px #808080;
    }
</style>




<div class="container">

    <div class="content">
        <div class="wrap">
            <div class="about">
                <h3>Hakkımızda</h3>

            </div>
        </div>
    </div>

    <div class="row" style="
                            border-radius:10px;
                            padding:10px; 
                            padding-bottom:100px;
                            padding-top:50px;
                            box-shadow:2px 2px 10px #ccc;
                                ">

        @foreach (var i in Model)
        {
            <div class="col-lg-6">
                <img class="hakkimizda" src="@i.FotoUrl" />
            </div>

        }


        <div class="col-lg-6 mb-5">

            @foreach (var i in Model)
            {


                <p class="text-justify">
                    @i.Aciklama
                </p>

            }




        </div>


    </div>


</div>


<div style="height:180px"></div>