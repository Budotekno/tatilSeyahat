@model tatilSeyahat.Models.Siniflar.Blog

@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekleme</h2>
<br />
<br />


<form class="form-group" method="post">

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />

    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })

    <br />


    <label>Fotoğraf Linki</label>
    @Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control" })

    <br />
    <a href="/Admin/Index/" class="btn btn-danger">İptal</a>


    <button class="btn btn-warning">Ekle</button>


</form>

